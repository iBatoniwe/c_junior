using System;
using System.Collections.Generic;
using System.Diagnostics;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;



namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {

            int people;
            int hour = 60;
            int waitingTime = 10;
            int totalWaitingTime;
            int totalhoursWaiting;
            int totalminutesWaiting;

            Console.Write("Сколько перед вами людей?");
            people = Convert.ToInt32(Console.ReadLine());
            totalWaitingTime = waitingTime * people;
            totalhoursWaiting = totalWaitingTime / hour;
            totalminutesWaiting = totalWaitingTime - totalhoursWaiting * hour;

            Console.WriteLine($"Ваше время ожидания: {totalhoursWaiting} час(ов) и {totalminutesWaiting} минут");
            Console.ReadKey();

        }
    }

}
