using System;
using System.Collections.Generic;
using System.Diagnostics;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;



namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int people;
            int hour = 60;
            int waitingTime = 10;
            int totalWaitingTime;
            int totalHoursWaiting;
            int totalMinutesWaiting;

            Console.Write("Сколько перед вами людей?");
            people = Convert.ToInt32(Console.ReadLine());
            totalWaitingTime = waitingTime * people;
            totalHoursWaiting = totalWaitingTime / hour;
            totalMinutesWaiting = totalWaitingTime - totalHoursWaiting * hour;

            Console.WriteLine($"Ваше время ожидания: {totalHoursWaiting} час(а/ов) и {totalMinutesWaiting} минут");
            Console.ReadKey();
        }
    }
}
