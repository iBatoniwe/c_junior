using System;
using System.Collections.Generic;
using System.Diagnostics;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int allPictures = 52;
            int picturesInRow = 3;
            int fulledRows = allPictures / picturesInRow;
            int restPictures = allPictures % picturesInRow;

            Console.WriteLine($"полностью заполненные ряды: {fulledRows}");
            Console.WriteLine($"остаток картинок: {restPictures}");
            Console.ReadKey();
        }
    }
}
